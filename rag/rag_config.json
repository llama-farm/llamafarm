{
  "parser": {
    "type": "CustomerSupportCSVParser",
    "config": {
      "content_fields": [
        "subject",
        "body",
        "answer"
      ],
      "metadata_fields": [
        "type",
        "queue",
        "priority",
        "language"
      ],
      "combine_content": true,
      "content_separator": "\n\n---\n\n"
    }
  },
  "embedder": {
    "type": "OllamaEmbedder",
    "config": {
      "model": "nomic-embed-text",
      "base_url": "http://localhost:11434",
      "batch_size": 16,
      "timeout": 60
    }
  },
  "vector_store": {
    "type": "ChromaStore",
    "config": {
      "collection_name": "support_tickets",
      "persist_directory": "./chroma_db"
    }
  }
}