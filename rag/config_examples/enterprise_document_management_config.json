{
  "version": "2.0",
  "description": "Enterprise-grade document management configuration with comprehensive metadata and lifecycle management",
  
  "parsers": {
    "csv_enhanced": {
      "type": "CustomerSupportCSVParser",
      "config": {
        "content_fields": ["subject", "body", "answer"],
        "metadata_fields": ["type", "priority", "language", "tags", "department", "created_by"],
        "id_field": "id",
        "combine_content": true,
        "content_separator": "\n\n",
        "chunk_metadata": {
          "generate_summary": true,
          "extract_keywords": true,
          "include_statistics": true,
          "content_analysis": {
            "detect_language": true,
            "estimate_reading_time": true,
            "sentiment_analysis": true,
            "topic_classification": true,
            "urgency_detection": true
          },
          "custom_fields": {
            "ticket_category": "auto_classify",
            "sentiment": "auto_analyze",
            "urgency_score": "calculate",
            "escalation_needed": "predict",
            "resolution_complexity": "estimate"
          },
          "audit_fields": {
            "processed_by": "system",
            "processing_timestamp": "auto",
            "quality_score": "calculate"
          }
        }
      },
      "file_extensions": [".csv"],
      "mime_types": ["text/csv", "application/csv"]
    },
    "pdf_enterprise": {
      "type": "PDFParser",
      "config": {
        "extract_metadata": true,
        "extract_page_structure": true,
        "combine_pages": true,
        "page_separator": "\n\n--- Page Break ---\n\n",
        "min_text_length": 10,
        "include_page_numbers": true,
        "extract_outline": true,
        "chunk_metadata": {
          "generate_summary": true,
          "extract_keywords": true,
          "include_statistics": true,
          "page_info": {
            "include_page_range": true,
            "include_page_count": true,
            "track_section_headers": true,
            "extract_table_of_contents": true,
            "identify_appendices": true
          },
          "content_analysis": {
            "detect_language": true,
            "estimate_reading_time": true,
            "extract_key_phrases": true,
            "identify_document_type": true,
            "extract_entities": true,
            "classify_confidentiality": true,
            "detect_signatures": true,
            "extract_dates": true
          },
          "compliance_fields": {
            "retention_category": "auto_classify",
            "access_level": "determine",
            "data_classification": "analyze",
            "regulatory_tags": "extract"
          },
          "custom_fields": {
            "document_section": "auto_detect",
            "content_type": "classify",
            "importance_score": "calculate",
            "legal_significance": "assess",
            "business_impact": "evaluate"
          }
        }
      },
      "file_extensions": [".pdf"],
      "mime_types": ["application/pdf"]
    },
    "pdf_legal": {
      "type": "PDFParser",
      "config": {
        "extract_metadata": true,
        "extract_page_structure": true,
        "combine_pages": false,
        "min_text_length": 50,
        "include_page_numbers": true,
        "chunk_metadata": {
          "generate_summary": true,
          "extract_keywords": true,
          "include_statistics": true,
          "legal_analysis": {
            "extract_clauses": true,
            "identify_obligations": true,
            "detect_deadlines": true,
            "extract_parties": true,
            "classify_document_type": true
          },
          "compliance_fields": {
            "retention_category": "legal_documents",
            "access_level": "confidential",
            "regulatory_requirements": "analyze"
          }
        }
      },
      "file_extensions": [".pdf"],
      "mime_types": ["application/pdf"],
      "priority": 3
    }
  },
  
  "embedders": {
    "default": {
      "type": "OllamaEmbedder",
      "config": {
        "model": "nomic-embed-text",
        "base_url": "http://localhost:11434",
        "batch_size": 16,
        "timeout": 60,
        "metadata_enrichment": {
          "track_embedding_quality": true,
          "store_model_version": true,
          "calculate_embedding_stats": true
        }
      }
    },
    "high_precision": {
      "type": "OllamaEmbedder",
      "config": {
        "model": "nomic-embed-text",
        "base_url": "http://localhost:11434",
        "batch_size": 8,
        "timeout": 120,
        "metadata_enrichment": {
          "track_embedding_quality": true,
          "store_model_version": true,
          "calculate_embedding_stats": true,
          "quality_threshold": 0.85
        }
      }
    },
    "bulk_processing": {
      "type": "OllamaEmbedder",
      "config": {
        "model": "nomic-embed-text",
        "base_url": "http://localhost:11434",
        "batch_size": 32,
        "timeout": 30,
        "metadata_enrichment": {
          "track_embedding_quality": false,
          "store_model_version": true,
          "optimize_for_speed": true
        }
      }
    }
  },
  
  "vector_stores": {
    "production": {
      "type": "ChromaStore",
      "config": {
        "collection_name": "enterprise_documents",
        "persist_directory": "./data/enterprise_chroma_db",
        "metadata_config": {
          "enable_versioning": true,
          "enable_soft_delete": true,
          "hash_algorithm": "sha256",
          "retention_policy": {
            "default_ttl_days": 2555,
            "max_versions": 50,
            "cleanup_schedule": "daily",
            "archive_before_delete": true,
            "archive_location": "./data/archives/",
            "compliance_retention": {
              "legal_documents": 2555,
              "financial_records": 2190,
              "employee_records": 2555,
              "general_documents": 1095
            }
          },
          "required_metadata": [
            "doc_id", "chunk_id", "filename", "file_hash", "chunk_hash", 
            "created_at", "updated_at", "version", "is_active", "source_system",
            "access_level", "department", "retention_category", "document_type",
            "created_by", "last_modified_by", "business_unit", "project_id"
          ],
          "indexed_metadata": [
            "doc_id", "filename", "created_at", "updated_at", "version", 
            "is_active", "source_system", "access_level", "department",
            "retention_category", "document_type", "business_unit"
          ],
          "audit_config": {
            "enable_audit_log": true,
            "audit_retention_days": 2555,
            "track_access": true,
            "track_modifications": true,
            "track_deletions": true,
            "track_search_queries": true,
            "compliance_logging": true,
            "audit_log_location": "./data/audit_logs/"
          },
          "security_config": {
            "enable_encryption_at_rest": true,
            "enable_access_control": true,
            "require_authentication": true,
            "log_security_events": true,
            "data_classification_required": true
          },
          "performance_config": {
            "enable_batch_operations": true,
            "batch_size": 100,
            "enable_compression": true,
            "index_optimization": "daily",
            "cache_frequently_accessed": true
          }
        }
      }
    },
    "staging": {
      "type": "ChromaStore",
      "config": {
        "collection_name": "staging_documents",
        "persist_directory": "./data/staging_chroma_db",
        "metadata_config": {
          "enable_versioning": true,
          "enable_soft_delete": true,
          "hash_algorithm": "sha256",
          "retention_policy": {
            "default_ttl_days": 90,
            "max_versions": 10,
            "cleanup_schedule": "weekly"
          },
          "required_metadata": [
            "doc_id", "chunk_id", "filename", "file_hash", 
            "chunk_hash", "created_at", "updated_at", "version"
          ]
        }
      }
    },
    "development": {
      "type": "ChromaStore",
      "config": {
        "collection_name": "dev_documents",
        "persist_directory": "./data/dev_chroma_db",
        "metadata_config": {
          "enable_versioning": false,
          "enable_soft_delete": false,
          "hash_algorithm": "md5",
          "retention_policy": {
            "default_ttl_days": 7,
            "max_versions": 3,
            "cleanup_schedule": "daily"
          }
        }
      }
    }
  },
  
  "retrieval_strategies": {
    "enterprise_default": {
      "type": "HybridUniversalStrategy",
      "config": {
        "combination_method": "weighted_average",
        "strategies": [
          {"type": "BasicSimilarityStrategy", "weight": 0.4},
          {"type": "MetadataFilteredStrategy", "weight": 0.3},
          {"type": "RerankedStrategy", "weight": 0.3}
        ],
        "metadata_boost": {
          "access_level": {"confidential": 0.2, "public": 0.0},
          "document_type": {"legal": 0.3, "financial": 0.2, "general": 0.0},
          "importance_score": "multiply"
        }
      },
      "description": "Enterprise hybrid strategy with metadata boosting"
    },
    "legal_specialized": {
      "type": "HybridUniversalStrategy",
      "config": {
        "combination_method": "rank_fusion",
        "strategies": [
          {"type": "MetadataFilteredStrategy", "weight": 0.5, "config": {"default_filters": {"retention_category": "legal_documents"}}},
          {"type": "RerankedStrategy", "weight": 0.3},
          {"type": "MultiQueryStrategy", "weight": 0.2}
        ],
        "legal_specific": {
          "boost_recent_amendments": true,
          "prioritize_active_contracts": true,
          "consider_legal_precedence": true
        }
      },
      "description": "Specialized strategy for legal document retrieval"
    },
    "compliance_audit": {
      "type": "MetadataFilteredStrategy",
      "config": {
        "distance_metric": "cosine",
        "default_filters": {
          "is_active": true,
          "access_level": {"$in": ["confidential", "restricted"]},
          "retention_category": {"$in": ["legal_documents", "financial_records"]}
        },
        "audit_features": {
          "log_all_queries": true,
          "track_result_access": true,
          "require_justification": true
        }
      },
      "description": "Compliance-focused retrieval with audit trails"
    },
    "high_precision": {
      "type": "RerankedStrategy",
      "config": {
        "initial_k": 50,
        "rerank_factors": {
          "recency": 0.15,
          "document_quality": 0.25,
          "access_frequency": 0.1,
          "business_importance": 0.2,
          "compliance_score": 0.3
        },
        "quality_thresholds": {
          "minimum_similarity": 0.7,
          "minimum_quality_score": 0.6,
          "maximum_results": 10
        }
      },
      "description": "High-precision retrieval for critical business decisions"
    },
    "bulk_discovery": {
      "type": "MultiQueryStrategy",
      "config": {
        "num_queries": 5,
        "aggregation_method": "weighted",
        "search_multiplier": 3,
        "query_expansion": {
          "use_synonyms": true,
          "use_acronyms": true,
          "use_related_terms": true
        }
      },
      "description": "Comprehensive discovery for research and analysis"
    }
  },
  
  "defaults": {
    "parser": "auto",
    "embedder": "default",
    "vector_store": "production",
    "retrieval_strategy": "enterprise_default"
  },
  
  "enterprise_features": {
    "document_lifecycle": {
      "automatic_expiration": true,
      "version_consolidation": true,
      "duplicate_detection": true,
      "content_validation": true
    },
    "compliance": {
      "gdpr_compliance": true,
      "hipaa_compliance": true,
      "sox_compliance": true,
      "iso27001_compliance": true
    },
    "monitoring": {
      "performance_metrics": true,
      "usage_analytics": true,
      "error_tracking": true,
      "capacity_monitoring": true
    },
    "integration": {
      "api_endpoints": true,
      "webhook_notifications": true,
      "sso_integration": true,
      "ldap_integration": true
    }
  }
}