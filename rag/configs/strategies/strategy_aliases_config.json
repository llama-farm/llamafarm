{
  "parser": {
    "type": "CustomerSupportCSVParser",
    "config": {
      "content_fields": ["subject", "body", "answer"],
      "metadata_fields": ["type", "priority", "language"],
      "id_field": "id",
      "combine_content": true,
      "content_separator": "\n\n"
    }
  },
  "embedder": {
    "type": "OllamaEmbedder",
    "config": {
      "model": "nomic-embed-text",
      "base_url": "http://localhost:11434",
      "batch_size": 16,
      "timeout": 60
    }
  },
  "vector_store": {
    "type": "ChromaStore",
    "config": {
      "collection_name": "aliases_demo",
      "persist_directory": "./data/aliases_chroma_db"
    }
  },
  "retrieval_strategy": {
    "type": "HybridUniversalStrategy",
    "config": {
      "combination_method": "weighted_average",
      "strategies": [
        {
          "type": "basic",
          "weight": 0.5,
          "config": {
            "distance_metric": "cosine"
          }
        },
        {
          "type": "filtered",
          "weight": 0.3,
          "config": {
            "default_filters": {
              "priority": ["high"]
            }
          }
        },
        {
          "type": "multi_query",
          "weight": 0.2,
          "config": {
            "num_queries": 2,
            "aggregation_method": "mean"
          }
        }
      ]
    }
  }
}