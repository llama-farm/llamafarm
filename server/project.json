{
    "root": "server/",
    "targets": {
        "start": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{workspaceRoot}/server",
                "command": "uv run python main.py",
                "output": "inherit"
            }
        },
        "build": {
            "cwd": "..",
            "command": "docker build -t llamafarm-api -f server/Dockerfile ."
        },

        "test": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{workspaceRoot}/server",
                "command": "uv run pytest -v --cov=. --cov-report=term-missing"
            }
        }
    }
}